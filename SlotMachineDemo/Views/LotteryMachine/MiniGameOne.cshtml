    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #eeeeee;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
        }

        .slot-machine {
            margin: 50px auto;
            width: 600px;
            height: 400px;
            border: 1px solid #cccccc;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
        }

        .reel {
            position: absolute;
            top: 0;
            left: 0;
            width: 200px;
            height: 400px;
            overflow: hidden;
        }

            .reel img {
                width: 200px;
                height: 100%;
                display: block;
                margin: 0 auto;
            }

            .reel:nth-child(2) {
                left: 200px;
            }

            .reel:nth-child(3) {
                left: 400px;
            }

        .spin-button {
            display: block;
            margin: 0 auto;
            padding: 10px 20px;
            border: none;
            background-color: #ff0000;
            color: #ffffff;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
